<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_check"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@drawable/check_bg" />

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/c_333333"
                    android:textSize="13sp"
                    tools:text="芒果干" />

                <TextView
                    android:id="@+id/tv_flavor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_999999"
                    android:textSize="12sp"
                    tools:text="原味" />
            </LinearLayout>

            <com.xwtec.androidframe.customView.PriceView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp"
                tools:text="33.99" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:background="@drawable/reduce_add_stroker"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/reduce"
                    android:textColor="@color/c_333333"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/c_c0c0c0" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="38dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/c_333333"
                    android:textSize="13sp"
                    tools:text="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/c_c0c0c0" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="21dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/c_333333"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_eaeaea" />
</LinearLayout>