<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@mipmap/wel</item>-->
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="roundDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="loading" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="main_menu_photo_anim">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="fiveRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/five_rating_bar</item>
    </style>

    <!--自定义View样式-->
    <declare-styleable name="PriceView">
        <attr name="integerPartSize" format="integer" />
        <attr name="decimalPartSize" format="integer" />
    </declare-styleable>
    <declare-styleable name="DeleteTextView">
        <attr name="deleteLineColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CircleProgressbar">
        <attr name="in_circle_color" format="color" />
        <attr name="progress_color" format="color" />
    </declare-styleable>
</resources>
