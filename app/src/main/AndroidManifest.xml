<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xwtec.androidframe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".manager.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 启动页+引导页 -->
        <activity android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 主页 -->
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.register.RegisterActivity"></activity>
        <activity android:name=".ui.goodDetail.GoodDetailActivity" />
        <activity android:name=".ui.login.LoginActivity"></activity>
    </application>

</manifest>